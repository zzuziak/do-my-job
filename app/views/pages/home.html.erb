        <h3 class="text-center">Fabian</h3>
        <p>Business-Genius and Flexboxer</p>
      </div>
      <div class="col-xs-12 col-md-3 add-info3">
        <%= image_tag("ileana.gif", width: "100%", alt: "Name", class: "img-responsive center-block avatar-front") %>
