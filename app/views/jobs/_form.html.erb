<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= simple_form_for job do |f| %>
    <%= f.input :title %>
    <%= f.input :category, collection: ["arts & design", "business & finance", "science", "academia", "sports & events", "services", "gastronomy", "entertainment", "transportation", "politics", "healthcare"] %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :guided, input_html: {value: :guided} %>
    <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
      <div class="button-center">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
<div class="spacer"></div>

