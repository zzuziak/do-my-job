<div class="container">
  <h1>Your Search Results(<%= @jobs.count %>)</h1>
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <%= link_to job_path(job.id) do %>

          <% url = job.photo.blank? ? image_path('http://via.placeholder.com/250x350', height: 250, width: 350) : cl_image_path(job.photo, height: 250, width: 350, crop: :fit) %>

          <div class="card-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= url %>');">
          </div>

          <div class="card-footer">
            <h3><%= job[:title] %></h3>
            <p class="category"><%= job[:category] %></p>
            <p class="location"><%= job[:location] %></p>
            <p class="price"><%= job[:price] %></p>
          </div>

        <% end %>
      </div>
    <% end %>
  </div>
</div>
