<div class="container">
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <%= link_to job_path(job.id) do %>
          <div class="card">
            <% url = job.photo.blank? ? image_path('http://via.placeholder.com/250x350', height: 250, width: 350) : cl_image_path(job.photo, height: 250, width: 350, crop: :fit), class: "card-image" %>
            <div class="card-footer">
              <h3><%= job[:title] %></h3>
              <p class="category"><%= job[:category] %></p>
              <p class="location"><%= job[:location] %></p>
              <p class="price"><%= job[:price] %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



















